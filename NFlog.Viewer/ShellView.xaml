<Window x:Class="NFlog.Viewer.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:app="clr-namespace:NFlog.Viewer"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <app:MessageTemplateSelector x:Key="selector" />
    </Window.Resources>

    <StackPanel Background="White">
        <StackPanel Orientation="Horizontal">
            <Button Name="LoadFile" Content="Open File"/>
            <Button Name="RefreshFile" Content="Refresh File"/>
        </StackPanel>
        <ListBox Name="Messages" ItemTemplateSelector="{StaticResource selector}"/>
    </StackPanel>

</Window>